<Page x:Class="Game_of_Life.Spiel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game_of_Life"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Spiel">
    <Page.DataContext>
        <local:SpielViewModel/>
    </Page.DataContext>
    <Grid>
        <Canvas x:Name="Zeichenfläche" />

        <Grid>
            <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="2*"/>
                 <ColumnDefinition Width="25"/>
                 <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
           
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <Button  Name="start" Content="Start" Click="start_Click"/>
                <TextBlock Text="Animation"/>
                <Button  Name="Animation" Content="Starte Animation" Click="Animation_Click"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
